# ScholarMasterEngine Configuration
# Copy this file to .env and update with your values

# Data Paths
DATA_PATH=data
MODELS_PATH=models

# Database Files
STUDENTS_DB=students.json
ATTENDANCE_DB=attendance.csv
TIMETABLE_DB=timetable.csv
ALERTS_DB=alerts.json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_THEME=light

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Face Recognition
FACE_RECOGNITION_MODEL=buffalo_l
FACE_SIMILARITY_THRESHOLD=0.5
FAISS_INDEX_PATH=data/face_index.faiss

# Audio Sentinel
AUDIO_THRESHOLD_DB=70
SCREAMING_DURATION_SEC=2

# Performance
MAX_WORKERS=4
BATCH_SIZE=32

# Security
SESSION_TIMEOUT_MIN=30
MAX_LOGIN_ATTEMPTS=3

# Development
DEBUG=false
ENABLE_PROFILING=false
